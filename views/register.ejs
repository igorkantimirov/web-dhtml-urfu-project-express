<!DOCTYPE html>
<html>
  <head>
  <%- include("partials/head.ejs") %>
  </head>
  <body>
    <%- include("partials/header.ejs") %>
    <div class="container">
      <%- include("partials/error_msg.ejs") %>
      <form class="auth-form" method="post">
        <h1>Регистрация</h1>
        <label for="username">Имя пользователя:</label> <input class="auth-form__input" type="text" name="username"> <br>
        <label for="email">Почта:</label> <input class="auth-form__input" type="text" name="email" value="example@example.com"> <br>
        <label for="phone">Номер телефона:</label> <input class="auth-form__input" type="text" name="phone_number" value="79999999999"> <br>
        <label for="password">Пароль:</label> <input class="auth-form__input" type="password" name="user_password"> <br>
        <p><input type="checkbox" name="agree_rules" id="agree_rules" required><label for="agree_rules">Согласен с <a href=''>правилами сервиса</a></label></p>
        <input type="submit" class="button-default-s" value="Регистрация">
      </form>
    </div>
    <%- include("partials/footer.ejs") %>
  </body>
</html>